{
    "name": "rajpurohithitesh/amazon-paapi5-php-sdk",
    "version": "1.0.8",
    "description": "Amazon Product Advertising API v5 PHP SDK (Most Advanced SDK)",
    "type": "library",
    "keywords": [
        "amazon",
        "pa-api",
        "paapi",
        "paapi5.0",
        "paapi5",
        "paapi5-php-sdk",
        "getitems",
        "searchitems",
        "getvariations",
        "getbrowsenodes",
        "ProductAdvertisingAPI",
        "guzzle7",
        "guzzle-compatible"
    ],
    "homepage": "https://webservices.amazon.com/paapi5/documentation/index.html",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Hitesh Rajpurohit",
            "homepage": "https://github.com/RajpurohitHitesh"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^6.2 || ^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "phpcs": "vendor/bin/phpcs --standard=PSR12 src/ test/",
        "phpcbf": "vendor/bin/phpcbf --standard=PSR12 src/ test/",
        "php-cs-fixer": "vendor/bin/php-cs-fixer fix --allow-risky=yes --using-cache=no",
        "post-install-cmd": [
            "@php -r \"echo 'Amazon PA-API5 PHP SDK with Guzzle 7 support installed successfully!\\n';\"",
            "@php -r \"if (class_exists('\\\\GuzzleHttp\\\\Psr7\\\\Query')) { echo 'Guzzle 7 detected - Using new Query::build method\\n'; } else { echo 'Guzzle 6 detected - Using legacy build_query function\\n'; }\""
        ]
    },
    "autoload": {
        "psr-4": { 
            "Amazon\\ProductAdvertisingAPI\\v1\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": { 
            "Amazon\\ProductAdvertisingAPI\\v1\\": "test/"
        }
    },
    "minimum-stability": "stable",
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform-check": true
    }
}